<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="adapter"
                type="me.kujio.android.kandroidutils.SimpleRecyclerAdapter"/>
    </data>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".simple.MainActivity">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <Button
                android:id="@+id/dialog_center"
                android:text="中间弹窗"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/dialog_bottom"
                android:text="底部弹窗"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/crash_catch"
                android:text="异常捕获"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/refresh"
                android:text="刷新列表"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <me.kujio.android.kandroidutils.loading.KLoadingView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:type="circle"/>

        <me.kujio.android.kandroidutils.loading.KLoadingView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:type="line"/>

        <androidx.recyclerview.widget.RecyclerView
                app:simpleAdapter="@{adapter}"
                app:poolSize="@{15}"
                app:types="@{1}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    </LinearLayout>
</layout>